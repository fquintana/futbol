<%= simple_form_for(@torneo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.label :torneotipo_id, "Tipo" %>
    <%= collection_select(:torneo, :torneotipo_id, Torneotipo.all, :id, :nombre) %>
    <%= f.input :cantidad_equipos %>
    <%= f.input :fecha_comienzo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
